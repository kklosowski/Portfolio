@model Project

<form asp-action="Edit" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <label asp-for="Title">Project Title</label>
        <input asp-for="Title" type="text" class="form-control" value="@Model.Title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GithubUrl" class="control-label"></label>
        <input asp-for="GithubUrl" class="form-control" value="@Model.GithubUrl"/>
        <span asp-validation-for="GithubUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl" class="control-label"></label>
        <input asp-for="ImageUrl" class="form-control" value="@Model.ImageUrl"/>
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShortDescription" class="control-label"></label>
        <textarea rows="2" asp-for="ShortDescription" class="form-control">@Model.ShortDescription</textarea>
        <span asp-validation-for="ShortDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LongDescription" class="control-label"></label>
        <textarea id="bbTextArea" rows="10" asp-for="LongDescription" class="form-control">@Model.LongDescription</textarea>
        <span asp-validation-for="LongDescription" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-secondary">Confirm changes</button>
    <a asp-controller="Project" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-secondary">Drop changes</a>
</form>

