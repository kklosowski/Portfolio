@using System.Globalization
@model List<Post>

<div class="how-section1">
    @foreach (var post in Model)
    {
        if (post.Published)
        {
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-5 col-sm-12 col-xs-12 how-img">
                    <img src="@post.ImageUrl" class="rounded-circle img-fluid" alt=""/>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-7 col-sm-12 col-xs-12">
                    <h4>
                        <a asp-action="Post" asp-controller="Blog" asp-route-id="@post.Id">@post.Title</a>
                    </h4>
                    <p class="text-muted">
                        @post.ShortText
                    </p>
                    <div class="row">
                        <div class="col">
                            <span class="badge badge-light badge-secondary mr-auto">
                                @post.DateCreated.ToString(CultureInfo.CurrentCulture)
                            </span>
                        </div>
                        <div class="col">
                            <span class="badge badge-light badge-secondary ml-auto">
                                Author: @(post.IdentityUser.Email)
                            </span>
                        </div>                                           
                    </div>
                </div>
            </div>    
            <hr/>
        }        
    }
</div>