@using System.Globalization
@model List<Post>

<div class="how-section1">
    @foreach (var post in Model)
    {
        <div class="row">
            <div class="col-md-6 how-img">
                <img src="@post.ImageUrl" class="rounded-circle img-fluid" alt=""/>
            </div>
            <div class="col-md-6">
                <h4>
                    <a asp-action="Post" asp-controller="Blog" asp-route-id="@post.Id">@post.Title</a>
                </h4>
                <p class="text-muted">
                    @post.ShortText
                </p>
                <div>
                    <span class="badge badge-light badge-secondary mr-auto">@post.DateCreated.ToString(CultureInfo.CurrentCulture)</span>
                    <span class="badge badge-light badge-secondary ml-auto">Author: @(post.IdentityUser.Email)</span>
                </div>
            </div>
        </div>
        <hr/>
    }
</div>