</head>
<body>

<nav class="navbar navbar-expand-md navbar-dark mb-0 fixed-top" id="mainNav">
    <div class="transition-helper"></div>
    <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand js-scroll-trigger">Portfolio</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="nav navbar-nav">
            <li class="nav-item">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link js-scroll-trigger">Home</a>
            </li>
            <li class="nav-item">
                <a asp-area="" asp-controller="Blog" asp-action="Index" class="nav-link js-scroll-trigger">Blog</a>
            </li>
        </ul>
        <partial name="_LoginPartial" />
    </div>
</nav>

@* <partial name="_CookieConsentPartial"/> *@

<div class="container body-content rounded mt-5 body-shadow">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; 2018 - kklosowski.com</p>
    </footer>
</div>

<environment include="Development, Production">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/navbar-shrinker.js"></script>


    <script src="~/lib/sceditor/minified/sceditor.min.js"></script>
    <script src="~/lib/sceditor/minified/formats/xhtml.js"></script>
    <script>
        var textarea = document.getElementById('bbTextArea');
        sceditor.create(textarea, {
            format: 'xhtml',
            style: 'minified/themes/content/default.min.css',
            width: "100%",
            height: "100%",
            autoExpand: true,
            toolbarExclude: "email,ltr,rtl,emoticon",
            emoticonsEnabled: false
        });
    </script>

</environment>
