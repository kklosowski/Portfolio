@model HomeViewModel

@{
    Layout = "_LayoutIndex";
}

<div class="full-width main-jumbotron">
    <div class="w-100 h-100 p-0 m-0 lead-back-shadow-gradient full-width">
        <div class="jumbotron">
            <div class="container lead-shadow-gradient text-light text-center py-5">
                <h1 class="display-3">
                    <strong>Kamil Klosowski</strong>
                </h1>
                <p class="lead">Student, Web developer, aspiring Data Scientist.</p>
                <hr class="my-4">
                <p></p>
                <a class="btn btn-secondary btn-lg" id="ctaButton" role="button">Learn more</a>
            </div>
        </div>
    </div>
</div>


<div class="pb-5 mb-5">
    <div class="container body-content rounded mt-5 pt-5 body-shadow" id="mainContent">

        <div class="row">
            <div class="col-lg-6 col-lg-offset-3 text-center mx-auto">
                <h2><span class="ion-minus"></span>Projects<span class="ion-minus"></span></h2>
            </div>
        </div>
        <div class="card-deck row d-flex justify-content-around" id="project-deck">
            @foreach (var project in Model.Projects)
            {
                <div class="card text-center">
                    <img class="card-img-top " src="@project.ImageUrl" alt="Project Thumbnail">
                    <div class="card-body pb-2">
                        <h4 class="card-title">
                            <a asp-controller="Project" asp-action="Index" asp-route-id="@project.Id">@project.Title</a>
                        </h4>
                        <p class="card-text text-justify p-2">@project.ShortDescription</p>
                    </div>
                    <div class="card-footer bg-transparent border-0 pt-0 pb-3 my-auto">
                        <div class="d-flex justify-content-around">
                            <a class="btn btn-default" asp-controller="Project" asp-action="Index" asp-route-id="@project.Id">Read More</a>
                            <a class="btn btn-default" href="@project.GithubUrl">Github</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <hr class="pt-5 mt-5"/>
    </div>
        
    <div class="jumbotron w-100 bg-dark" style="height: 600px">
        <div class="container">
            <div class="col-lg-6 col-lg-offset-3 text-center mx-auto pt-4">
                <h2 class="text-light"><span class="ion-minus"></span>A few things about me<span class="ion-minus"></span></h2>
            </div>
        </div>
    </div>

    <div class="container body-content py-4 my-5 rounded body-shadow">
        <!--zigzag section-->
        <div class="row mt-3" id="zigzag">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-lg-offset-3 text-center mx-auto pt-2">
                        <h2><span class="ion-minus"></span>Vertical Timeline<span class="ion-minus"></span></h2>
                    </div>
                </div>
                <!--first section-->
                <div class="row align-items-center how-it-works d-flex">
                    <div class="col-2 text-center bottom d-inline-flex justify-content-center align-items-center">
                        <div class="circle font-weight-bold">1</div>
                    </div>
                    <div class="col-6">
                        <h5>Fully Responsive</h5>
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed porttitor gravida aliquam. Morbi orci urna, iaculis in ligula et, posuere interdum lectus.</p>
                    </div>
                </div>
                <!--path between 1-2-->
                <div class="row timeline">
                    <div class="col-2">
                        <div class="corner top-right"></div>
                    </div>
                    <div class="col-8">
                        <hr/>
                    </div>
                    <div class="col-2">
                        <div class="corner left-bottom"></div>
                    </div>
                </div>
                <!--second section-->
                <div class="row align-items-center justify-content-end how-it-works d-flex">
                    <div class="col-6 text-right">
                        <h5>Using Bootstrap</h5>
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed porttitor gravida aliquam. Morbi orci urna, iaculis in ligula et, posuere interdum lectus.</p>
                    </div>
                    <div class="col-2 text-center full d-inline-flex justify-content-center align-items-center">
                        <div class="circle font-weight-bold">2</div>
                    </div>
                </div>
                <!--path between 2-3-->
                <div class="row timeline">
                    <div class="col-2">
                        <div class="corner right-bottom"></div>
                    </div>
                    <div class="col-8">
                        <hr/>
                    </div>
                    <div class="col-2">
                        <div class="corner top-left"></div>
                    </div>
                </div>
                <!--third section-->
                <div class="row align-items-center how-it-works d-flex">
                    <div class="col-2 text-center top d-inline-flex justify-content-center align-items-center">
                        <div class="circle font-weight-bold">3</div>
                    </div>
                    <div class="col-6">
                        <h5>Now with Pug and Sass</h5>
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed porttitor gravida aliquam. Morbi orci urna, iaculis in ligula et, posuere interdum lectus.</p>
                    </div>
                </div>
            </div>
        </div>

        
    </div>

    <div class="jumbotron w-100 bg-dark" style="height: 600px">
        <div class="container">
            <div class="col-lg-6 col-lg-offset-3 text-center mx-auto pt-4">
                <h2 class="text-light"><span class="ion-minus"></span>Contact<span class="ion-minus"></span></h2>
            </div>
        </div>
    </div>

    <hr/>
    <footer class="pb-2">
        <p>&copy; 2018 - kklosowski.com</p>
    </footer>
</div>